// Slightly-opinionated-but-hopefully-not-too-much
// initial configuration for geosuggest input and results
$border-color = #b1c1c5;
$box-shadow = 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);

.geosuggest {
    position: relative;
}

.geosuggest__input {
    width: 100%;
    height: 48px;
    font-size: 16px;
    line-height: 20px;
    padding: 13px 16px;
    border: solid 1px $border-color;
    margin: 0;
}

.geosuggest label {
    display: block;
    width: 100%;
    font-size: 14px;
    font-weight: 500;
    padding-bottom: 8px; // Using padding rather than margin for label click hitbox
}

.geosuggest__suggests-wrapper {
    position: absolute;
    width: 100%;
    background: #fff;
    z-index: 9999;
}

.geosuggest__suggests {
    border: solid 1px $border-color;
    box-shadow: $box-shadow;
}

.geosuggest__suggests--hidden {
    display: none;
}

.geosuggest__item {
    padding: 16px;
    line-height: 1.25;

    // Styling for mouse hover *and* keyboard up/down navigation on geosuggest results
    &:hover,
    &--active {
        background: #fafafa;
        font-weight: 500;
    }
}
