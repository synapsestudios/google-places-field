$alabaster = #fafafa;
$mist = #b1c1c5;
$white = #fff;
$medium = 500;
$card-box-shadow = 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);

.geosuggest {
    position: relative;
}

.geosuggest__input {
    width: 100%;
    height: 48px;
    font-size: 16px;
    line-height: 20px;
    padding: 12px 16px;
    border: solid 2px $mist;
    margin: 0 !important;
}

.geosuggest__suggests-wrapper {
    position: absolute;
    width: 100%;
    top: 48px;
    left: 0;
    background: $white;
    z-index: 9999;
}

.geosuggest__suggests {
    border: solid 1px $mist;
    box-shadow: $card-box-shadow;
}

.geosuggest__item {
    padding: 16px;
    line-height: 1.25;

    // Styling for mouse hover *or* keyboard up/down navigation on geosuggest results
    &:hover,
    &--active {
        background: $alabaster;
        font-weight: $medium;
    }
}

.geosuggest__suggests--hidden {
    display: none;
}
